<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Partida_Justa.menuSorteioSort"
             BackgroundImageSource="background_modelo.png"
             Title="Sorteio de Jogadores">

    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <Label 
            Text="Qual será o tamanho das equipes?"
            TextColor="GhostWhite"
            FontSize="Small"
             
            HorizontalOptions="Center" />


        <Entry 
            x:Name="NomeEntry"
            WidthRequest="250"                 
            BackgroundColor="White" 
            Placeholder="Insira um número de 1 a 10" 
            Keyboard="Default"                  
            />

        <Button
                WidthRequest="200"
                Text="Iniciar Sorteio"
                TextColor="Black"
                BackgroundColor="LightGray"                    
                HorizontalOptions="Center"
                Clicked="sortearEquipes"
                />



    </VerticalStackLayout>
</ContentPage>