<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Partida_Justa.MenuSorteio"
             BackgroundImageSource="background_modelo.png"
             Title="Menu de Sorteio">

    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <Button
                WidthRequest="200"
                Text="Sortear Times"
                TextColor="Black"
                BackgroundColor="GhostWhite"
                BorderColor="Green"                   
                HorizontalOptions="Center"
                Clicked="MenuSortSorteio"     
               />

        <Button
                WidthRequest="200"
                Text="Ver Times Sorteados"
                TextColor="Black"
                BackgroundColor="GhostWhite"
                BorderColor="Green"                   
                HorizontalOptions="Center"
                Clicked="MenuListaSorteio"
                />

  

    </VerticalStackLayout>
</ContentPage>