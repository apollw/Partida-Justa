<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Partida_Justa.MenuPartida"
             BackgroundImageSource="background_modelo.png"
             Title="Menu de Partida">
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <Button
                WidthRequest="200"
                Text="Registrar Partida"
                TextColor="Black"
                BackgroundColor="LightGray"                    
                HorizontalOptions="Center"
                Clicked="MenuRegPartida"
            
                />

        <Button
                WidthRequest="200"
                Text="Ver Histórico"
                TextColor="Black"
                BackgroundColor="LightGray"                    
                HorizontalOptions="Center"
                Clicked="MenuVerPartida"
            
                />

        <Button
                WidthRequest="200"
                Text="Apagar Histórico"
                TextColor="Black"
                BackgroundColor="LightGray"                    
                HorizontalOptions="Center"
                Clicked="MenuApagPartida"
            
                />



    </VerticalStackLayout>
    
</ContentPage>