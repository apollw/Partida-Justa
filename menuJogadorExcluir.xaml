<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Partida_Justa.menuJogadorExcluir"
             BackgroundImageSource="background_modelo.png"
             Title="Excluir Jogadores">

    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <Button
                WidthRequest="200"
                Text="Apagar Jogador"
                TextColor="Black"
                BackgroundColor="LightGray"                    
                HorizontalOptions="Center"
                Clicked="apagarJogador"
                />

        <Button
                WidthRequest="200"
                Text="Apagar Lista de Jogadores"
                TextColor="Black"
                BackgroundColor="LightGray"                    
                HorizontalOptions="Center"
                Clicked="apagarLista"
                />

    </VerticalStackLayout>
</ContentPage>